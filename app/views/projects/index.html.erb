<div class="container">
  <h1 class= "text-center" >Projects</h1>
  <div id="projects">
    <% @projects.each do |project| %>
      <%= render project %>
      <% if policy(project).show? %>
      <p class="text-center">
        <%= link_to "Show this project", project , class: 'btn btn-dark mx-5' %>
      </p>
      <% end %>
    <% end %>
  </div>
  <% if policy(@projects).new? %>
    <div class="text-center">
      <%= link_to "New project", new_project_path , class: 'btn btn-outline-dark'%>
    </div>
  <% end %>
</div>
