<div class="container mt-5">
  <div class="row d-flex justify-content-center">
    <div class="col-md-6">
      <div class="card px-5 py-5" id="form1">
        <%= form_with(model: [@project, fix]) do |form| %>
          <% if fix.errors.any? %>
            <div style="color: red">
              <h2><%= pluralize(fix.errors.count, "error") %> prohibited this fix from being saved:</h2>
              <ul>
                <% fix.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <div>
            <%= form.label :name, style: "display: block" %>
            <%= form.text_field :name , class: "form-control"%>
          </div>
          <div>
            <%= form.label :description, style: "display: block" %>
            <%= form.text_area :description, class: "form-control" %>
          </div>
          <div>
            <%= form.label :project_id, style: "display: block" %>
            <%= form.text_field :project_id, class: "form-control" %>
          </div>
          <div>
            <%= form.label :image, style: "display: block" %>
            <%= form.file_field :image , class: "form-control"%>
          </div>
          
          <br>
          <div class="text-center">
            <%= form.submit "Create Fix", class: "btn btn-outline-dark" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
